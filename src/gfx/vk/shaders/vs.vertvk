#version 450

layout(location = 0) in vec2 position;
layout(location = 1) in vec2 texcoord;

layout(location = 0) out vec2 frag_texcoord;

void main(void)
{
	gl_Position = vec4(position.xy, 0, 1);

	frag_texcoord = texcoord;
}
